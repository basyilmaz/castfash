# ===========================================
# CastFash - Root Environment Variables
# For Docker Compose deployment
# Copy this file to .env and fill in your values
# ===========================================

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_USER=castfash
POSTGRES_PASSWORD=secure-password-change-this
POSTGRES_DB=castfash
DB_PORT=5440

# ===========================================
# BACKEND
# ===========================================
BACKEND_PORT=3002
JWT_SECRET=change-this-to-a-very-long-random-string-minimum-64-characters-for-security
JWT_ACCESS_EXPIRES=1h
JWT_REFRESH_EXPIRES=7d
LOG_LEVEL=info

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3002

# ===========================================
# EMAIL (SMTP)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=CastFash <noreply@castfash.com>

# ===========================================
# AI PROVIDERS
# ===========================================
AI_PROVIDER_KIE_ENABLED=true
AI_PROVIDER_KIE_API_KEY=
AI_PROVIDER_REPLICATE_ENABLED=false
AI_PROVIDER_REPLICATE_API_KEY=
AI_PROVIDER_FAL_ENABLED=false
AI_PROVIDER_FAL_API_KEY=
