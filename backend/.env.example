# =============================================================================
# CastFash Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control
# =============================================================================

# =============================================================================
# DATABASE (Required)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/castfash?schema=public

# =============================================================================
# JWT CONFIGURATION (Required)
# =============================================================================
# JWT_SECRET must be at least 32 characters (64+ recommended for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-characters

# Token expiry times (format: 15m, 1h, 7d, 30d)
JWT_ACCESS_EXPIRES=1h
JWT_REFRESH_EXPIRES=7d

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3002
NODE_ENV=development
LOG_LEVEL=debug

# =============================================================================
# FRONTEND URL (Required - used for email links)
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION (Required for password reset, verification)
# =============================================================================
# Gmail example - use App Password, not account password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=CastFash <noreply@castfash.com>

# For production, consider using:
# - SendGrid: smtp.sendgrid.net
# - AWS SES: email-smtp.us-east-1.amazonaws.com
# - Mailgun: smtp.mailgun.org

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# KIE Provider (default)
AI_PROVIDER_KIE_ENABLED=true
AI_PROVIDER_KIE_API_KEY=your-kie-api-key
AI_PROVIDER_KIE_BASE_URL=https://api.kie.ai

# Replicate Provider (optional)
AI_PROVIDER_REPLICATE_ENABLED=false
AI_PROVIDER_REPLICATE_API_KEY=

# FAL Provider (optional)
AI_PROVIDER_FAL_ENABLED=false
AI_PROVIDER_FAL_API_KEY=

# =============================================================================
# RATE LIMITING
# =============================================================================
# Time window in milliseconds
RATE_LIMIT_TTL=60000
# Max requests per window
RATE_LIMIT_LIMIT=100

# =============================================================================
# OPTIONAL: PUBLIC URLs
# =============================================================================
# APP_PUBLIC_URL=https://api.castfash.com
# BASE_URL=https://api.castfash.com

# =============================================================================
# OPTIONAL: STRIPE PAYMENT (International)
# =============================================================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_TEST_MODE=true

# =============================================================================
# OPTIONAL: PAYTR PAYMENT (Turkey)
# =============================================================================
# PayTR ile iletişime geçip merchant bilgilerinizi alın: https://www.paytr.com
# PAYTR_MERCHANT_ID=your-merchant-id
# PAYTR_MERCHANT_KEY=your-merchant-key
# PAYTR_MERCHANT_SALT=your-merchant-salt
# PAYTR_TEST_MODE=true

# =============================================================================
# OPTIONAL: REDIS (for caching and queue)
# =============================================================================
# REDIS_URL=redis://localhost:6379

# =============================================================================
# OPTIONAL: MONITORING
# =============================================================================
# SENTRY_DSN=https://xxx@sentry.io/xxx

