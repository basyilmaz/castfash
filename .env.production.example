# CastFash Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=castfash
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=castfash
DB_PORT=5440

# ===========================================
# BACKEND
# ===========================================
BACKEND_PORT=3002
NODE_ENV=production

# JWT Settings (CHANGE THESE!)
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_STRONG_SECRET
JWT_ACCESS_EXPIRES=1h
JWT_REFRESH_EXPIRES=7d

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3002

# ===========================================
# EMAIL (Optional)
# ===========================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=CastFash <noreply@castfash.com>

# ===========================================
# AI PROVIDERS
# ===========================================
# KIE.ai Provider
AI_PROVIDER_KIE_ENABLED=true
AI_PROVIDER_KIE_API_KEY=your-kie-api-key

# Replicate (Optional)
AI_PROVIDER_REPLICATE_ENABLED=false
AI_PROVIDER_REPLICATE_API_KEY=

# FAL (Optional)
AI_PROVIDER_FAL_ENABLED=false
AI_PROVIDER_FAL_API_KEY=

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

# ===========================================
# OPTIONAL: SSL/HTTPS
# ===========================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
